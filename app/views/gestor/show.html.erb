<div class="container-fluid">

  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">
        <div class="box-header">
          <i class="icon-th-list"></i> Detalhes do Gestor 
          <div class="pull-right">
            <div class="btn-group">
              <a class="dropdown-toggle" data-toggle="dropdown">
                <i class="icon-cog"></i>
              </a>
              <ul class="dropdown-menu dropdown-left">
                <li><a href="/gestor/<%= @gestor.id %>/edit">Editar</a></li>
              </ul>
            </div>
          </div>
        </div>

        <div class="row-fluid">

          <div class="span6">
            <div class="padded">
              <div class="section-title">
                Dados Básicos
              </div>
          <div class="input full-width">
             <label> Nome : <%= @gestor.nome %> </label>
             <label> Sexo : <%= @gestor.sexo %> </label>
             <label> Estado Civil : <%= @gestor.estado_civil %> </label>
             <label> Data de Nascimento : <%= @gestor.data_nascimento %> </label>
             <label> CPF : <%= @gestor.cpf %> </label>
             <label> RG : <%= @gestor.rg %> </label>
          </div>
          <br/>
        </div>
      </div>

      <div class="span6">
        <div class="padded">
            <div class="section-title">
              Contato
              </div>
              <div class="input full-width">
                <label> Telefone : <%= @gestor.telefone %> </label>
                <label> Celular : <%= @gestor.celular %> </label>
                <label> E-mail : <%= @gestor.email %> </label>
                <label> Endereço : <%= @gestor.endereco %> <%= " " %> <%= @admin_empresa.bairro %> </label>
                <label> Complemento : <%= @gestor.complemento %> </label>
                <label> CEP : <%= @gestor.cep %> </label>
                <label> Cidade : <%= @gestor.cidade %> </label>
                <label> Estado : <%= @gestor.estado %> </label>
                <label> Pais : <%= @gestor.pais %> </label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

