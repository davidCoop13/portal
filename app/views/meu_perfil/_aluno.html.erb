<%= form_for(@aluno, html: {multipart: true}) do |f| %>
  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :curriculo %>
    <%= f.file_field :curriculo %>
  </div>
  <div class="actions">
    <%= f.submit "Salvar", :class => "btn light-blue inverse" %>
  </div>
<% end %>
