  <script type="text/javascript">
  $(function() {

    var notas = [];
    notas = [
    <% @historico_estagios.each do |t|%>
    ['<%= t.modulo.to_s %>', <%= t.nota %>],
    <% end %>
    [,]
  ];
    var plot = $.plot("#historicos", [
      { data: notas, label: "notas"}
    ], {
      series: {
        lines: {
          show: true
        },
        points: {
          show: true
        }
      },
      grid: {
        hoverable: true,
        clickable: true
      },
      yaxis: {
        min: 0.0,
        max: 10.0
      },
      xaxis: {
        min: 1.0,
        max: 5.0,
      ticks: [[1, "1o módulo"], [2, "2o módulo"], [3, "3o módulo"], [4, "4o módulo"], [5, "5o módulo"]]
      }
    });

    function showTooltip(x, y, contents) {
      $("<div id='tooltip'>" + contents + "</div>").css({
        position: "absolute",
        display: "none",
        top: y + 5,
        left: x + 5,
        border: "1px solid #fdd",
        padding: "2px",
        "background-color": "#fee",
        opacity: 0.80
      }).appendTo("body").fadeIn(200);
    }

    var previousPoint = null;
    $("#historicos").bind("plothover", function (event, pos, item) {
      
      if (item) {
        if (previousPoint != item.dataIndex) {

          previousPoint = item.dataIndex;

          $("#tooltip").remove();
          var x = item.datapoint[0],
          y = item.datapoint[1].toFixed(1);

          showTooltip(item.pageX, item.pageY,
               "nota do módulo " + x + " => " + y);
        }
      } else {
        $("#tooltip").remove();
        previousPoint = null;            
      }
      
    });

    $("#historicos").bind("plotclick", function (event, pos, item) {
      if (item) {
        $("#clickdata").text(" - click point " + item.dataIndex + " in " + item.series.label);
        plot.highlight(item.series, item.datapoint);
      }
    }); 
  });

  </script>


<div class="container-fluid">
    <div class="span12">
      <div class="box bordered">
        <div class="box-header">
          <i class="icon-bar-chart"></i> Histórico de Estágios
        </div>

        <div class="padded">
          <div class="row-fluid">
            <div class="span12">
              <div class="chart" id="historicos" style="width: 100%; height: 300px;"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>