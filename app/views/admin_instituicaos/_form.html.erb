<%= form_for(@admin_instituicao, :validate => true)  do |f| %>
<div class="vpadded">
  <div class="input full-width">
    <%= f.label :nome %>
    <%= f.text_field :nome , :placeholder => "Nome"%>
  </div>
  <div class="input full-width">
    <%= f.label :email %>
    <%= f.text_field :email , :placeholder => "Email"%>
  </div>
  <div class="input full-width">
    <%= f.label :telefone %>
    <%= f.text_field :telefone , :placeholder => "Telefone"%>
  </div>
  <div class="input full-width">
    <%= f.label :"data de Nascimento" %>
    <%= f.date_select :dataNascimento , :start_year => 1920 , :order => [:day, :month, :year]%>
  </div>
  <div class="input full-width">
    <%= f.label :"RG" %>
    <%= f.text_field :rg , :placeholder => "RG"%>
  </div>
  <div class="input full-width">
    <%= f.label :"CPF" %>
    <%= f.text_field :cpf , :placeholder => "CPF" %>
  </div>
      <div class="input full-width">
      <label>Senha</label>
       <%= f.password_field :password, :placeholder => "Senha" %>
  </div>
  <div class="input full-width">
      <label>Confirmação de Senha</label>
       <%= f.password_field :cep, :placeholder => "Confirmação de senha" %>
  </div>

  <div class="actions">
<%= f.submit "Salvar", :class => "btn light-blue inverse" %>  </div>
</div>
</div>
<% end %>
