<div class="container-fluid">

  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">
        <div class="box-header">
          <%= notice_helper %>
          <i class="icon-th-list"></i> Detalhes do Administrador 
          <div class="pull-right">
            <div class="btn-group">
              <a class="dropdown-toggle" data-toggle="dropdown">
                <i class="icon-cog"></i>
              </a>
              <% if current_usuario.isAdmin? %>
                <ul class="dropdown-menu dropdown-left">
                  <li><a href="/admin_instituicaos/<%= @admin_instituicao.id %>/edit">Editar</a></li>
                </ul>
              <% end %>
            </div>
          </div>
        </div>

        <div class="row-fluid">

          <div class="span6">
            <div class="padded">
              <div class="section-title">
                Dados Básicos
              </div>
          <div class="input full-width">
             <label> Nome : <%= @admin_instituicao.nome %> </label>
             <label> Sexo : <%= @admin_instituicao.sexo %> </label>
             <label> Estado Civil : <%= @admin_instituicao.estado_civil %> </label>
             <label> Data de Nascimento : <%= @admin_instituicao.data_nascimento %> </label>
             <label> CPF : <%= @admin_instituicao.cpf %> </label>
             <label> RG : <%= @admin_instituicao.rg %> </label>
          </div>
          <br/>
        </div>
      </div>

      <div class="span6">
        <div class="padded">
            <div class="section-title">
              Contato
              </div>
              <div class="input full-width">
                <label> Telefone : <%= @admin_instituicao.telefone %> </label>
                <label> Celular : <%= @admin_instituicao.celular %> </label>
                <label> E-mail : <%= @admin_instituicao.email %> </label>
                <label> Endereço : <%= @admin_instituicao.endereco %> <%= " " %> <%= @admin_instituicao.bairro %> </label>
                <label> Complemento : <%= @admin_instituicao.complemento %> </label>
                <label> CEP : <%= @admin_instituicao.cep %> </label>
                <label> Cidade : <%= @admin_instituicao.cidade %> </label>
                <label> Estado : <%= @admin_instituicao.estado %> </label>
                <label> Pais : <%= @admin_instituicao.pais %> </label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

